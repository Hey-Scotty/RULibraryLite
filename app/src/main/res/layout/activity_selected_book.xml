<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_selected_book"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.weebly.httplexiconindustries.ru.JavaActivities.SelectedBookActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToPadding="false">
    <Button
        android:id="@+id/account_button"
        android:background="@drawable/account_icon"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/back_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="10dp" />

    <Button
        android:id="@+id/back_button"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/backicon"
        android:elevation="10dp" />

    <com.cengalabs.flatui.views.FlatButton
        android:text="Library Lite Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/home_button"
        flatui:fl_fontFamily="roboto"
        flatui:fl_fontWeight="light"
        flatui:fl_fontExtension="ttf"
        flatui:fl_theme="@array/ru_theme"
        android:elevation="10dp" />

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/box"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="24dp" />

    <TextView
        android:ellipsize="end"
        android:maxLines="50"
        android:id="@+id/desc_field"
        android:text="DescriptionHere"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/desc_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Book Title Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_field"
        android:layout_below="@+id/title_label"
        android:layout_alignLeft="@+id/title_label"
        android:layout_alignStart="@+id/title_label"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="Author(s) name(s) Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_field"
        android:layout_below="@+id/author_label"
        android:layout_alignLeft="@+id/author_label"
        android:layout_alignStart="@+id/author_label"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp" />

        <TextView
        android:text="Publish Year Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pub_year_field"
        android:layout_below="@+id/pub_year_label"
        android:layout_alignLeft="@+id/pub_year_label"
        android:layout_alignStart="@+id/pub_year_label"
        android:layout_marginTop="3dp"
        android:paddingRight="10dp" />

    <Button
        android:id="@+id/fav_button"
        android:layout_width="40dp"
        android:layout_below="@+id/pub_year_field"
        android:layout_alignLeft="@+id/author_field"
        android:layout_alignStart="@+id/author_field"
        android:layout_height="40dp"
        android:layout_marginLeft="-5dp"
        android:elevation="24dp"
        android:backgroundTint="@color/colorPrimary" />

    <TextView
        android:text="Author(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_label"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/title_field"
        android:layout_alignLeft="@+id/title_field"
        android:layout_alignStart="@+id/title_field"
        android:textSize="16sp" />

    <ImageView
        flatui:srcCompat="@drawable/placeholderbook"
        android:layout_marginTop="30dp"
        android:id="@+id/cover_art"
        android:layout_height="220dp"
        android:layout_width="160dp"
        android:layout_below="@+id/myRectangleView"
        android:layout_alignLeft="@+id/back_button"
        android:layout_alignStart="@+id/back_button"
        android:elevation="9dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/desc_label"
        android:textSize="16sp"
        android:layout_below="@+id/fav_button"
        android:layout_alignLeft="@+id/desc_field"
        android:layout_alignStart="@+id/desc_field" />

        <TextView
            android:text="Publish Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pub_year_label"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/author_field"
            android:layout_alignLeft="@+id/author_field"
            android:layout_alignStart="@+id/author_field"
            android:textSize="16sp" />

        <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_label"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_alignTop="@+id/cover_art"
            android:layout_toRightOf="@+id/cover_art"
            android:layout_toEndOf="@+id/cover_art"
            android:textSize="16sp" />
    </RelativeLayout>
</ScrollView>
