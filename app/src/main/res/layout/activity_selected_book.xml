<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_selected_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.weebly.httplexiconindustries.ru.JavaActivities.SelectedBookActivity">

    <Button
        android:id="@+id/account_button"
        android:background="@drawable/account_icon"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/back_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/back_button"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/backicon" />

    <com.cengalabs.flatui.views.FlatButton
        android:text="LibLite Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/home_button"
        flatui:fl_fontFamily="roboto"
        flatui:fl_fontWeight="light"
        flatui:fl_fontExtension="ttf"
        flatui:fl_theme="@array/custom_theme"
        android:elevation="0dp" />

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/box"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        flatui:srcCompat="@drawable/placeholderbook"
        android:layout_marginTop="47dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/myRectangleView"
        android:layout_alignLeft="@+id/back_button"
        android:layout_alignStart="@+id/back_button"
        android:layout_height="220dp"
        android:layout_width="160dp" />

    <TextView
        android:text="Publish Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publish_year_label"
        android:layout_below="@id/author_field"
        android:layout_alignLeft="@+id/author_field"
        android:layout_alignStart="@+id/author_field"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_label"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

    <TextView
        android:layout_height="100dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:singleLine="false"
        android:id="@+id/desc_field"
        android:text="DescriptionHere"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/desc_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/fav_button"
        android:background="@drawable/favorite_icon"
        android:layout_alignLeft="@+id/publish_year_field"
        android:layout_alignStart="@+id/publish_year_field"
        android:layout_height="60dp"
        android:layout_width="10dp"
        android:layout_below="@+id/publish_year_field"
        android:layout_alignRight="@+id/home_button"
        android:layout_alignEnd="@+id/home_button"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="BookTitleHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_field"
        android:layout_below="@+id/title_label"
        android:layout_alignLeft="@+id/title_label"
        android:layout_alignStart="@+id/title_label" />

    <TextView
        android:text="Author(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/author_label"
        android:layout_below="@+id/title_field"
        android:layout_alignLeft="@+id/title_field"
        android:layout_alignStart="@+id/title_field" />

    <TextView
        android:text="AuthorNamesHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_field"
        android:layout_below="@+id/author_label"
        android:layout_alignLeft="@+id/author_label"
        android:layout_alignStart="@+id/author_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publish_year_field"
        android:text="Publish Year Here"
        android:layout_below="@+id/publish_year_label"
        android:layout_alignLeft="@+id/publish_year_label"
        android:layout_alignStart="@+id/publish_year_label" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/desc_label"
        android:textSize="16sp"
        android:layout_below="@+id/imageView5"
        android:layout_alignLeft="@+id/desc_field"
        android:layout_alignStart="@+id/desc_field" />

</RelativeLayout>
